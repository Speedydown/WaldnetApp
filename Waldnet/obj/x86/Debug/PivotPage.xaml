<Page
    x:Class="Waldnet.PivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Waldnet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Waldnet.Data"
    mc:Ignorable="d"
    Background="White">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <CommonNavigationTransitionInfo IsStaggeringEnabled="True"/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="White">
        <ProgressBar x:Name="DataProgressBar" IsIndeterminate="True" VerticalAlignment="Top"/>
        <Grid x:Name="NoInternetGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Canvas.ZIndex="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Wâldnet is op dit moment helaas niet beschikbaar :(" TextWrapping="WrapWholeWords" Foreground="#0061b0" FontSize="35" TextAlignment="Center" />
            <TextBlock Grid.Row="1" Text="Opnieuw proberen? Klik dan op vernieuwen" TextWrapping="WrapWholeWords" Foreground="#0061b0" FontSize="15" TextAlignment="Center" Margin="0, 25" />
        </Grid>
        <Pivot x:ConnectionId='1' x:Uid="Pivot" Margin="0,-27,0,0" x:Name="pivotControl" CommonNavigationTransitionInfo.IsStaggerElement="True" Foreground="#0061b0"                                          >
            <PivotItem
                Margin="0,5,0,0"               
                CommonNavigationTransitionInfo.IsStaggerElement="True">
                <PivotItem.Header>
                    <TextBlock Text="Regionaal" FontSize="25" Margin="0,4,0,0" Foreground="#0061b0" FontWeight="ExtraBold"/>
                </PivotItem.Header>

                <ListView
                    x:Name="RegionalNews"
                    ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Stretch" Grid.Column="0" >
                                <Grid Background="#0061b0">
                                    <TextBlock
                                        Margin="17,0,19,0"
                                    Text="{Binding DayName}"
                                    TextWrapping="Wrap"
                                    Pivot.SlideInAnimationGroup="1"
                                    CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    FontSize="25"
                                    Foreground="White" FontWeight="Bold"/>
                                </Grid>
                                <ListView x:ConnectionId='5'
                                    Margin="0,0,0,5"
                                    ItemsSource="{Binding NewsLinks}"
                    IsItemClickEnabled="True"
                                                  
                    ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                               

                                                <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="{Binding Name}" TextWrapping="WrapWholeWords"
                                    Pivot.SlideInAnimationGroup="1" CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    Foreground="#FF07519A" FontSize="18" Margin="17,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </PivotItem>
            <PivotItem
                x:Uid="PivotItem2"
                Margin="0,5,0,0"
                >
                <PivotItem.Header>
                    <TextBlock Text="Overige"  FontSize="25" Margin="0,4,0,0" Foreground="#0061b0" FontWeight="ExtraBold"/>
                </PivotItem.Header>
                <ListView
                    x:Name="OndernemendNieuwsList"
                    ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Stretch" Grid.Column="0" >
                                <Grid Background="#0061b0">
                                    <TextBlock
                                        Margin="17,0,19,0"
                                    Text="{Binding DayName}"
                                    TextWrapping="Wrap"
                                    Pivot.SlideInAnimationGroup="1"
                                    CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    FontSize="25"
                                    Foreground="White" FontWeight="Bold"/>
                                </Grid>
                                <ListView x:ConnectionId='4'
                                    Margin="0,0,0,5"
                                    ItemsSource="{Binding NewsLinks}"
                    IsItemClickEnabled="True"
                                                  
                    ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
     
                                                <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="{Binding Name}" TextWrapping="WrapWholeWords"
                                    Pivot.SlideInAnimationGroup="1" CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    Foreground="#FF07519A" FontSize="18" Margin="17,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </PivotItem>
            <PivotItem
                x:Uid="SearchPivot"
                x:Name="SearchPivot"
                Margin="0,5,0,0"
                >
                <PivotItem.Header>
                    <TextBlock Text="Archief"  FontSize="25" Margin="0,4,0,0" Foreground="#0061b0" FontWeight="ExtraBold"/>
                </PivotItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBox x:ConnectionId='2' x:Name="SearchTextbox" IsEnabled="True" IsReadOnly="False" Grid.Row="1" Margin="17,15" PlaceholderText="Vul hier uw zoekterm in"                                />
                    <ListView x:ConnectionId='3'
                    x:Name="SearchResultList"
                        Grid.Row="2"
                                    Margin="0,0,0,5"
                    IsItemClickEnabled="True"
                                                          
                    ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                        <ListView.HeaderTemplate>
                            <DataTemplate>

                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Margin="0,0,0,0" Fill="#FF07519A" HorizontalAlignment="Stretch" Height="1" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="2"/>


                                    <TextBlock
                                        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1"
                                    Text="{Binding NewsType}"
                                    TextWrapping="NoWrap"
                                    Pivot.SlideInAnimationGroup="3"
                                    CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    Foreground="#0061b0" 
                                                FontSize="18"
                                    Margin="17,0,0,0"/>
                                    <TextBlock
                                        Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1"
                                    Text="{Binding Date}"
                                    TextWrapping="NoWrap"
                                    Pivot.SlideInAnimationGroup="3"
                                    CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    Foreground="#0061b0" 
                                                FontSize="18"
                                    Margin="9,0,17,0"/>
          

                                    <TextBlock
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6"
                                    Text="{Binding Text}"
                                    TextWrapping="NoWrap"
                                    Pivot.SlideInAnimationGroup="3"
                                    CommonNavigationTransitionInfo.IsStaggerElement="True"
                                    Foreground="#0061b0" 
                                                FontSize="18" FontWeight="SemiBold"
                                    Margin="17,0,17,10"/>
                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Height" Value="Auto"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar Background="#0061b0" Foreground="White" ClosedDisplayMode="Minimal">
            <AppBarButton x:ConnectionId='6' x:Uid="WaldnetButton" x:Name="WaldnetButton" Label="Wâldnet" Icon="World"                             />
            <AppBarButton x:ConnectionId='7' x:Uid="WaldNetSearchButton" x:Name="WaldNetSearchButton" Label="Zoeken" Icon="Find" Visibility="Collapsed"                                  />
            <AppBarButton x:ConnectionId='8' x:Uid="RefreshButton" x:Name="RefreshButton" Label="Vernieuwen" Icon="Refresh"                             />
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='9' x:Uid="SettingsButton" x:Name="SettingsButton" Label="Instellingen"                              />
                <AppBarButton x:ConnectionId='10' x:Uid="PrivacyPolicyButton" x:Name="PrivacyPolicyButton" Label="Privacy policy"                                   />
            </CommandBar.SecondaryCommands>
        </CommandBar>

    </Page.BottomAppBar>
</Page>

